pipeline {
    agent any
    tools{
        maven 'M2_HOME'
    }
    stages {

        stage('SonarQube analysis') {
            steps {
                withSonarQubeEnv('sonar') {
                    sh 'mvn clean package sonar:sonar'
                }
            }
        }

        stage('deploy war file'){
            steps{
                sh 'rm -rf /opt/tomcat/webapps/restro*'
                sh 'cp target/restro.war /opt/tomcat/webapps/'
            }
        }
    }
}
