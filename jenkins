pipeline {
    agent any
    tools{
        maven 'M2_HOME'
    }
    stages {

        stage('SonarQube analysis') {
            steps {
                withSonarQubeEnv('sonar') {
                    sh 'mvn clean verify sonar:sonar -Dsonar.projectKey=temp'
                }
            }
        }

        stage('deploy war file'){
            steps{
                sh 'sudo rm -rf /opt/tomcat/webapps/restro*'
                sh 'sudo cp target/restro.war /opt/tomcat/webapps/'
            }
        }
    }
}
